---
import { Toast } from 'ui'

import Footer from '@components/layout/Footer.astro'
import Head from '@components/layout/Head.astro'
import Header from '@components/layout/Header.astro'

interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<html lang='en' class='scroll-smooth'>
  <Head title={title} description={description} />
  <body
    class='max-w-container overflow-x-hidden bg-white tracking-tight text-neutral-950 antialiased transition'
  >
    <Header />
    <main class='px-4 sm:px-8 lg:px-10'>
      <slot />
    </main>
    <Toast client:visible />
    <Footer />

    <style is:global>
      @font-face {
        font-family: 'BDOGrotesk';
        src: url('/fonts/BDOGrotesk.woff2') format('woff2');
        font-display: swap;
        font-weight: 400 600;
      }

      @font-face {
        font-family: 'HedvigLettersSerif';
        src: url('/fonts/HedvigLettersSerif.woff2') format('woff2');
        font-display: swap;
        font-weight: 400 600;
      }

      @font-face {
        font-family: 'Playfair Display';
        src: url('/fonts/Playfair.woff2') format('woff2');
        font-weight: 400 600;
        font-display: swap;
      }

      @font-face {
        font-family: 'Playfair Display';
        src: url('/fonts/Playfair-Italic.woff2') format('woff2');
        font-weight: 400 600;
        font-style: italic;
        font-display: swap;
      }
    </style>
  </body>
</html>
