---
import { Icon } from 'astro-icon/components'
import { Card, CardContent, CardHeader, CardTitle } from '../ui/card'

const services = [
  {
    name: 'Services for individuals',
    description:
      "Looking for knowledgeable and dependable accountants? We've got you covered.",
  },
  {
    name: 'Services for businesses',
    description:
      'Need help with your tax returns? Get in touch with us and see how we can help.',
  },
]
---

<section class='py-16 sm:py-20'>
  <div class='mx-auto px-4'>
    <div class='flex flex-col items-center gap-12 sm:gap-16'>
      <div class='grid gap-4 md:gap-6 lg:grid-cols-2'>
        {
          services.map(service =>
            service.name.includes('individuals') ? (
              <div class='bg-primary-500/10 dark:bg-primary-400/10 flex flex-col rounded-3xl px-6 py-8'>
                <Card className='p-5 max-w-[422px] bg-cyan-400 text-white relative'>
                  <Icon
                    name='lucide:arrow-up-right'
                    class='h-10 w-10 absolute end-4'
                  />
                  <CardHeader>
                    <CardTitle className='font-serif text-3xl md:text-5xl mt-4'>
                      {service.name}
                    </CardTitle>
                  </CardHeader>
                  <CardContent>
                    <p class='font-semibold md:text-xl md:mt-4'>
                      {service.description}
                    </p>
                  </CardContent>
                </Card>
              </div>
            ) : (
              <div class='bg-primary-500/10 dark:bg-primary-400/10 flex flex-col rounded-3xl px-6 py-8'>
                <Card className='p-5 max-w-[422px] bg-lime-400 text-white relative'>
                  <Icon
                    name='lucide:arrow-up-right'
                    class='h-10 w-10 absolute end-4'
                  />
                  <CardHeader>
                    <CardTitle className='font-serif text-3xl md:text-5xl mt-4'>
                      {service.name}
                    </CardTitle>
                  </CardHeader>
                  <CardContent>
                    <p class='font-semibold md:text-xl md:mt-4'>
                      {service.description}
                    </p>
                  </CardContent>
                </Card>
              </div>
            )
          )
        }
      </div>
    </div>
  </div>
</section>
