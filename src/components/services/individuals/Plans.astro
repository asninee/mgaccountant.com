---
import { buttonVariants } from '@/components/ui/button'
import { Icon } from 'astro-icon/components'
---

<section class='pb-16 sm:pb-24'>
  <div class='max-w-[85rem] mx-auto'>
    <div class='flex flex-col items-center gap-12 sm:gap-16'>
      <div
        class='mt-12 flex flex-col border border-gray-200 text-center rounded-xl'
      >
        <div class='p-4 bg-lime-400 rounded-t-md'>
          <h4 class='font-bold sm:text-lg text-white'>The Starter</h4>
        </div>
        <span
          class='font-semibold font-serif text-xl sm:text-2xl md:text-3xl text-gray-800 p-12'
          >All the basics covered.</span
        >
      </div>

      <a
        href='#ctable'
        class={buttonVariants({ variant: 'outline', size: 'lg' })}
      >
        <div class='flex items-center gap-4'>
          <span class='sm:text-lg font-semibold'>Compare plans</span>
          <Icon name='lucide:arrow-down' class='h-6 w-6' />
        </div>
      </a>
    </div>
  </div>
</section>
