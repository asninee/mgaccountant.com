---
import { buttonVariants } from '@/components/ui/button'
import { Icon } from 'astro-icon/components'
---

<section class='pb-16 sm:pb-24'>
  <div class='max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto'>
    <div class='flex flex-col items-center gap-12 sm:gap-16'>
      <div
        class='mt-12 grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:items-center'
      >
        <div
          class='flex flex-col border border-gray-200 text-center rounded-xl'
        >
          <div class='p-4 bg-lime-400 rounded-t-md'>
            <h4 class='font-bold text-lg text-white'>The Starter</h4>
          </div>
          <span
            class='font-semibold font-serif text-2xl md:text-3xl text-gray-800 p-12'
            >Ideal for small businesses with basic accounting needs.</span
          >
        </div>

        <div
          class='flex flex-col border border-gray-200 text-center rounded-xl'
        >
          <div class='p-4 bg-purple-600 rounded-t-md'>
            <h4 class='font-bold text-lg text-white'>The Primary</h4>
          </div>
          <span
            class='font-semibold font-serif text-2xl md:text-3xl text-gray-800 p-12'
            >Intermediate accounting for growing enterprises.</span
          >
        </div>

        <div
          class='flex flex-col border border-gray-200 text-center rounded-xl'
        >
          <div class='p-4 bg-purple-600 rounded-t-md'>
            <h4 class='font-bold text-lg text-white'>The Starter</h4>
          </div>
          <span
            class='bg-lime-400 rounded-b-md font-semibold font-serif text-2xl md:text-3xl text-gray-800 p-12'
            >Comprehensive accounting for growing enterprises.</span
          >
        </div>
      </div>
      <a
        href='#ctable'
        class={buttonVariants({ variant: 'outline', size: 'lg' })}
      >
        <div class='flex items-center gap-4'>
          <span class='text-lg font-semibold'>Compare plans</span>
          <Icon name='lucide:arrow-down' class='h-6 w-6' />
        </div>
      </a>
    </div>
  </div>
</section>
